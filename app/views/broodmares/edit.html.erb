<h2>I want a different color Broodmare, NOW!</h2>

<%= form_for @broodmare, method: :put do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :age %>
    <%= f.text_field :age %>

    <%= f.label :color %>
    <%= f.text_field :color %>

    <%= f.label :img_url %>
    <%= f.text_field :img_url %>

    <%= f.label :stallion_id %>
    <%= f.text_field :stallion_id %>

    <%= f.submit "Change my horsey, NOW!" %>
<%  end %>

